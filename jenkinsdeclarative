pipeline {
	agent any
	stages {
    	stage('Git Checkout') {
        	steps {
          	checkout([$class: 'GitSCM',
            	branches: [[name: '*/master']],
            	doGenerateSubmoduleConfigurations: false,
            	extensions: [[$class: 'CleanCheckout']],
            	submoduleCfg: [],
            	userRemoteConfigs: [[url: 'https://github.com/Rajreddy8978/jenkinspractice.git']]])
          	sh "ls -ltr"
      	}
    	}
    	stage('Development'){
        	steps {
   	        sh 'sudo mkdir -p /var/www/html/dev'
            	sh 'sudo rm -rf /var/www/html/dev/*'
            	sh 'sudo rm -rf /var/www/html/dev/.git'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/Rajreddy8978/jenkinspractice.git /var/www/html/dev'
        	}
    	}
    	stage('QA'){
        	steps {
   	        sh 'sudo mkdir -p /var/www/html/qa'    
            	sh 'sudo rm -rf /var/www/html/qa/*'
            	sh 'sudo rm -rf /var/www/html/qa/.git'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/Rajreddy8978/jenkinspractice.git /var/www/html/qa'
        	}
    	}
    	stage('Production'){
        	steps {
   	        sh 'sudo mkdir /var/www/html/production'
            	sh 'sudo rm -rf /var/www/html/production/*'
            	sh 'sudo rm -rf /var/www/html/production/.git'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/Rajreddy8978/jenkinspractice.git /var/www/html/production'
         	}
    	}   	 
	}
}
